                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Account" asp-action="Register">添加账号</a></li>
                    <li><a asp-controller="Account" asp-action="Show">显示账号</a></li>
                </ul>
            </li>
            <li>
               <a href="#">欢迎你： @User.Identity.Name</a> 
            </li>
             <li>
                <a onclick="clickthis();">退出登录</a>

            </li>
                <form method="post" asp-controller="Account" asp-action="Logout" id="forms">
                </form>
        </ul>
        
<script>
    function clickthis(){
         $("#forms").submit();
    }
</script>
    </div>
    </div>
</nav>
<div class="container body-content">
        @RenderBody()
</div>
     <environment include="Development">
        <script src="~/js/jquery-3.3.1.js"></script>
